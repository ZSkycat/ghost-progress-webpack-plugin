{
    "compilerOptions": {
        // base
        "rootDir": "./src",
        "outDir": "./dist",
        "target": "esnext",
        "module": "commonjs",
        "moduleResolution": "node",
        // feature
        "declaration": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        // type check
        "strict": true,
        "lib": ["esnext"],
    },
    "include": [
        "./src/**/*",
    ],
}
